<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.root
		{
			position:relative;
			width:500px;
			height:500px;
		}
		
		.button
		{
			position: absolute;
		}
		
	</ui:style>
	<g:HTMLPanel ui:field="rootPanel" addStyleNames="{style.root}">
		<div>
			Hello <g:InlineLabel ui:field="labelName">__________</g:InlineLabel>
		</div>
		<div>
			<g:TextBox ui:field="textName">Enter your name here</g:TextBox>
			<g:Button ui:field="btnApply" addStyleNames="{style.button}">Apply</g:Button>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 