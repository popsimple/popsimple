<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.rootPanel {
		    text-align: center;
		    padding: 80px;
		}
		.containerPanel {
		    margin: auto;
		    width: 350px;
		    border:#ccc 1px solid;
		    background-color:#fff;
		    padding:20px 20px 12px 20px;
		    border-radius: 5px 5px 5px 5px;
		    text-align: left;
		}
		.formLabel{
			display: inline-block;
			font-weight: normal;
			font-size: 20px;
			color: #aaaaaa;
		}
		.textBox{
			width: 17em;
			border:#ccc 1px solid;
			font-size: 20px;
			border-radius: 5px 5px 5px 5px;
		}
		.nameTextBox{
			width: 8em;
			border:#ccc 1px solid;
			font-size: 20px;
			border-radius: 5px 5px 5px 5px;
			display: block;
		}
		.button{
			display: inline-block;
			padding:5px 2px 4px;
			border-radius: 5px 5px 5px 5px;
			width: 150px;
		}
		.registrationPanel{
			margin:0 0 4px 0;
		}
		.captionLabel{
			font-size: 30px;
			color: #5CC3FA;
			padding: 20px;
		}
		.errorLabel{
			color: red;
		}
		.errorPanel{
			text-align: center;
			display: inline-block;
			padding: 0 0 0 50px;
		}
		.inputErrorLabel{
			color: #FA89A4;
		}

	</ui:style>
	<g:HTMLPanel addStyleNames="{style.rootPanel}">
		<div>
			<g:Label addStyleNames="{style.captionLabel}">Join the fun :)</g:Label>
		</div>
		<g:HTMLPanel ui:field="containerPanel" addStyleNames="{style.containerPanel}">
			<g:FormPanel ui:field="registrationForm">
				<g:HTMLPanel addStyleNames="{style.registrationPanel}">
<!-- 					<p> -->
<!-- 						<g:Label addStyleNames="{style.formLabel}">Public name (or nickname): </g:Label> -->
<!-- 						<g:TextBox ui:field="textName" addStyleNames="{style.textBox}"></g:TextBox> -->
<!-- 						<g:Label ui:field="nameErrorLabel" addStyleNames="{style.inputErrorLabel}"></g:Label> -->
<!-- 					</p> -->
					<p>
						<g:Label addStyleNames="{style.formLabel}">Email: </g:Label>
						<g:TextBox ui:field="textEmail" addStyleNames="{style.textBox}"></g:TextBox>
						<g:Label ui:field="emailErrorLabel" addStyleNames="{style.inputErrorLabel}"></g:Label>
					</p>
					<p>
						<g:Label addStyleNames="{style.formLabel}">Password:</g:Label>
						<g:PasswordTextBox ui:field="textPassword" addStyleNames="{style.textBox}"></g:PasswordTextBox>
						<g:Label ui:field="passwordErrorLabel" addStyleNames="{style.inputErrorLabel}"></g:Label>
					</p>
					<p>
						<g:Label addStyleNames="{style.formLabel}">Confirm Password:</g:Label>
						<g:PasswordTextBox ui:field="textConfirmPassword" addStyleNames="{style.textBox}"></g:PasswordTextBox>
						<g:Label ui:field="confirmErrorLabel" addStyleNames="{style.inputErrorLabel}"></g:Label>
					</p>
					<p>
						<g:SubmitButton ui:field="buttonRegister" addStyleNames="{style.button}">Create my account</g:SubmitButton>
						<g:HTMLPanel ui:field="errorPanel" addStyleNames="{style.errorPanel}">
							<g:Label addStyleNames="{style.errorLabel}"></g:Label>
						</g:HTMLPanel>
					</p>
				</g:HTMLPanel>
			</g:FormPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder>