<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field='res' type='com.project.website.canvas.client.resources.CanvasResources'/>
    <ui:style>

    </ui:style>
    <g:FlowPanel ui:field="mainPanel" addStyleNames="{res.main.imageBox}">
        <g:FlowPanel ui:field="contentPanel" addStyleNames="{res.main.imageToolContentPanel}"></g:FlowPanel>
        <g:FlowPanel ui:field="optionsBar" addStyleNames="{res.main.toolOptionsBar} {res.main.toolFrameHoverDisplayBlockElement}">
            <g:Button ui:field="optionsLabel" addStyleNames="{res.main.link} {res.main.toolOptionsLabel} ">
                Change image or appearance...
            </g:Button>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>