<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:com.project.website.canvas.client.canvastools.tasklist">
	<ui:with field='res' type='com.project.website.canvas.client.resources.CanvasResources'/>
	<ui:style>
	</ui:style>
    <g:HTMLPanel addStyleNames="{res.main.taskListWrapper}">
    	<g:HTMLPanel ui:field="panelMain" addStyleNames="{res.main.taskList}" >
     		<g:FlowPanel ui:field="header" addStyleNames="{res.main.taskListHeader}">
     			<my:HoverTextBox ui:field="title">My Task List</my:HoverTextBox>
    		</g:FlowPanel>
    		<div class="{res.main.taskListBodyWrapper}">
	    		<g:HTMLPanel ui:field="panelTaskList" addStyleNames="{res.main.taskListBody}">
	    		</g:HTMLPanel>
    		</div>
    		<g:HTMLPanel ui:field="footer" addStyleNames="{res.main.taskListFooter}">
    			<g:Button ui:field="buttonAdd">Add...</g:Button>
    		</g:HTMLPanel>
    	</g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>