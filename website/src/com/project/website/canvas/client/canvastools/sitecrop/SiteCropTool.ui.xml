<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:my="urn:import:com.project.website.canvas.client.shared.widgets">
    <ui:with field='res' type='com.project.website.canvas.client.resources.CanvasResources'/>
    <ui:style>
    	.urlPanel{
			display: inline-block;
    	}
    	.urlText{
			width: 300px;
		}
		.frameContainer{
			overflow: hidden;
			width: 100%;
			height: 100%;
			position: relative;
			margin: auto;
		}
		.coverPanel{
			overflow: hidden;
			width: 100%;
			height: 100%;
			position: absolute;
		}
		.dragPanel {
		    z-index: 1000;
			background-color: transparent;
			opacity: 0.4;
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
		}
		.blockPanel {
		    z-index: 1000;

			opacity: 0.4;
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
		}
		.selectionPanel{
			background-color: rgba(70,207,122,0.4);
			border-style: dotted;
			border-width: 1px;
			width: 0px;
			height: 0px;
			position: absolute;
			z-index: 1001;
		}
		.cropSiteFrame{
			border-style: none;
			overflow: hidden;
			position: relative;
			width: 100%;
			height: 100%;
		}
		.toggleButtonPanel{
			display: inline-block;
			position: relative;
			top: 6px;
		}
		.optionToggleButton{
			background-position: center;
			width: 16px;
			height: 16px;
			display: inline-block;
		}
		.acceptCropButton{
			margin-left: 5px;
			top: -2px;
			position: relative;
		}
    </ui:style>
    <g:HTMLPanel ui:field="rootPanel" addStyleNames="{res.main.cropSiteBox}">
        <g:FlowPanel ui:field="frameContainer" addStyleNames="{style.frameContainer}">
	       	<g:FlowPanel ui:field="coverPanel" addStyleNames="{style.coverPanel}">
		       	<g:HTMLPanel ui:field="blockPanel" addStyleNames="{style.blockPanel}"></g:HTMLPanel>
		       	<g:HTMLPanel ui:field="selectionPanel" addStyleNames="{style.selectionPanel}">
		       	</g:HTMLPanel>
		       	<g:HTMLPanel ui:field="dragPanel" addStyleNames="{style.dragPanel}"></g:HTMLPanel>
		       	<g:Frame ui:field="siteFrame" addStyleNames="{style.cropSiteFrame}"></g:Frame>
	       	</g:FlowPanel>
       	</g:FlowPanel>
        <g:FlowPanel addStyleNames="{res.main.toolOptionsBarContainer}">
            <g:FlowPanel ui:field="urlPanel" addStyleNames="{res.main.toolOptionsBar} {res.main.toolFrameHoverDisplayBlockElement}">
                <g:Label ui:field="urlLabel" addStyleNames="{style.urlPanel}">Url:</g:Label>
                <g:TextBox ui:field="urlTextBox" addStyleNames="{style.urlPanel} {style.urlText}"></g:TextBox>
                <g:CheckBox visible="false" checked="true" ui:field="chkAutoSize" addStyleNames="{style.urlPanel}"/>
                <my:ToggleButtonPanel addStyleNames="{style.toggleButtonPanel}">
	                <g:ToggleButton ui:field="moveButton" addStyleNames="{res.main.cropMoveButton} {style.optionToggleButton}"></g:ToggleButton>
	                <g:ToggleButton ui:field="browseButton" addStyleNames="{res.main.cropBrowseButton} {style.optionToggleButton}"></g:ToggleButton>
	                <g:ToggleButton ui:field="cropButton" addStyleNames="{res.main.cropCutButton} {style.optionToggleButton}"></g:ToggleButton>
                </my:ToggleButtonPanel>
                <g:Button ui:field="acceptCropButton" addStyleNames="{style.acceptCropButton}">Crop</g:Button>
            </g:FlowPanel>
        </g:FlowPanel>
    </g:HTMLPanel>
</ui:UiBinder>