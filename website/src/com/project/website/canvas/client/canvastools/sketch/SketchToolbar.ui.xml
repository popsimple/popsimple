<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:w="urn:import:com.project.website.canvas.client.shared.widgets"
    >
    <ui:with field='res' type='com.project.website.canvas.client.resources.CanvasResources'/>
    <ui:style>

    </ui:style>
    <g:HTMLPanel ui:field="rootPanel" addStyleNames="{res.main.canvasToolbar}">
        <w:ToggleButtonPanel addStyleNames="{res.main.canvasToolbarItemWrapper}">
            <g:ToggleButton ui:field="paintButton">Paint</g:ToggleButton>
            <g:ToggleButton ui:field="eraseButton">Erase</g:ToggleButton>
        </w:ToggleButtonPanel>
        <g:HTMLPanel ui:field="colorPanel" addStyleNames="{res.main.canvasToolbarItemWrapper}">
            <span class="{res.main.canvasToolbarItemTitle}">Color:</span>
            <w:ColorPicker ui:field="color"></w:ColorPicker>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>