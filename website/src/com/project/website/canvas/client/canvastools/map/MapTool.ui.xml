<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='res' type='com.project.website.canvas.client.resources.CanvasResources'/>
	<ui:style>

	</ui:style>
	<g:FlowPanel ui:field="mainPanel" addStyleNames="{res.main.mapToolMainPanel} {res.main.mapTool}">
		<g:FlowPanel ui:field="mapPanel" addStyleNames="{res.main.mapToolMapHolder}">
            <g:FlowPanel ui:field="mapLoadingPanel" visible="false" addStyleNames="{res.main.loadingFiller}"></g:FlowPanel>
        </g:FlowPanel>
        <g:FlowPanel addStyleNames="{res.main.toolOptionsBarContainer}">
            <g:FlowPanel ui:field="optionsBar" addStyleNames="{res.main.toolOptionsBar} {res.main.toolFrameHoverDisplayBlockElement}">
                <g:FlowPanel>
                    <g:TextBox ui:field="mapSearchTextBox"/>
                    <g:Button ui:field="mapSearchButton">Find</g:Button>
                </g:FlowPanel>
                <g:Button ui:field="optionsLabel" addStyleNames="{res.main.link} {res.main.toolOptionsLabel} ">
                    Map options...
                </g:Button>
            </g:FlowPanel>
        </g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>