<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.rootPanel {
		    text-align: center;
		    margin: 80px;
		}
		.containerPanel {
		    margin: auto;
		    width: 350px;
		    border:#ccc 1px solid;
		    background-color:#fff;
		    padding:20px 20px 12px 20px;
		    border-radius: 5px 5px 5px 5px;
		    text-align: left;
		}
		.loginLabel{
			display: inline-block;
			font-weight: normal;
			font-size: 20px;
			color: #aaaaaa;
		}
		.textBox{
			width: 17em;
			border:#ccc 1px solid;
			font-size: 20px;
			border-radius: 5px 5px 5px 5px;
		}
		.button{
			display: inline-block;
			padding:5px 2px 4px;
			border-radius: 5px 5px 5px 5px;
			width: 100px;
		}
		.loginPanel{
			margin:0 0 4px 0;
		}
		.captionLabel{
			font-size: 15px;
			color: #5CC3FA;
		}
		.errorLabel{
			color: red;
		}
		.errorPanel{
			text-align: center;
			display: inline-block;
			padding: 0 0 0 50px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.rootPanel}">
		<div>
			<g:Label addStyleNames="{style.captionLabel}">Please sign in</g:Label>
		</div>
		<g:FocusPanel ui:field="focusPanel" addStyleNames="{style.containerPanel}">
			<g:HTMLPanel>
				<g:HTMLPanel addStyleNames="{style.loginPanel}">
					<p>
						<g:Label addStyleNames="{style.loginLabel}">Email: </g:Label>
						<g:TextBox ui:field="textEmail" addStyleNames="{style.textBox}"></g:TextBox>
					</p>
					<p>
						<g:Label addStyleNames="{style.loginLabel}">Password:</g:Label>
						<g:PasswordTextBox ui:field="textPassword" addStyleNames="{style.textBox}"></g:PasswordTextBox>
					</p>
					<p>
						<g:Button ui:field="buttonLogin" addStyleNames="{style.button}">Login</g:Button>
						<g:HTMLPanel ui:field="errorPanel" addStyleNames="{style.errorPanel}">
							<g:Label addStyleNames="{style.errorLabel}">Login failed :(</g:Label>
						</g:HTMLPanel>
					</p>
				</g:HTMLPanel>
				<p><a href="#">Forgot password?</a></p>
			</g:HTMLPanel>
		</g:FocusPanel>
	</g:HTMLPanel>
</ui:UiBinder>