<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:com.project.website.canvas.client.shared.widgets.media"
	>
	<ui:style>
		.urlTextBox {
			width:30em;
		}
		.padded {
			padding:5px;
		}
		.dialogButtonsPanel{
			text-align: right;
			float: right;
			display: inline-block;
		}
		.urlPanel{
			display: block;
		}

	</ui:style>
	<g:FlowPanel ui:field="formPanel">
		<g:HTMLPanel addStyleNames="{style.padded}">
			<g:HTMLPanel addStyleNames="{style.padded}">
				Add an image from the web - enter a URL:
				<g:HTMLPanel addStyleNames="{style.urlPanel}">
					<g:TextBox ui:field="urlTextBox" addStyleNames="{style.urlTextBox}"/>
					<g:Button ui:field="clearButton" addStyleNames="{style.padded}">Clear</g:Button>
				</g:HTMLPanel>
			</g:HTMLPanel>
			<g:HTMLPanel>
				<my:MediaSearchPanel ui:field="mediaSearchPanel"/>
			</g:HTMLPanel>
			<div>
				<g:RadioButton ui:field="stretchOption" name="imageStyle" formValue="false">Stretch</g:RadioButton >
				<g:RadioButton ui:field="repeatOption" name="imageStyle" formValue="false">Repeat</g:RadioButton >
				<g:RadioButton ui:field="originalSizeOption" name="imageStyle" formValue="false">Use Original Size</g:RadioButton >
			</div>
			<g:HTMLPanel addStyleNames="{style.dialogButtonsPanel}">
				<g:Button ui:field="doneButton" addStyleNames="{style.padded}">Done</g:Button>
				<g:Button ui:field="cancelButton" addStyleNames="{style.padded}">Cancel</g:Button>
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:FlowPanel>
</ui:UiBinder>