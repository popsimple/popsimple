<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:com.project.canvas.client.canvastools.TaskList">
	<ui:with field='res' type='com.project.canvas.client.resources.CanvasResources'/>
	<ui:style>
		
	</ui:style>
	<g:HTMLPanel>
		<g:FlowPanel>
			<g:CheckBox ui:field="checkTask"></g:CheckBox>
			<g:FlowPanel ui:field="imageTask" addStyleNames="{res.main.taskImageContainer}"></g:FlowPanel>
			<my:HoverTextBox ui:field="textTask">Type your task here...</my:HoverTextBox>
			<g:Anchor ui:field="imageRemove" addStyleNames="{res.main.taskRemoveImage}"></g:Anchor>
		</g:FlowPanel>
	</g:HTMLPanel>
</ui:UiBinder> 