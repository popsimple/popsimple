<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.header
			{
			}
		.framePanel
			{
				position: absolute;
				display:inline-block;
			}
		.tool {
				padding:3px;
				display:inline-block;
			}				
		.framePanel:hover .tool
			{
				padding:2px;
				border-style: solid;
				border-width: 1px;
				border-radius: 5px;
				border-color: #ccc;
			}
		.closeLink {
				cursor:default;
				color:#f66;
			    text-shadow: 0 0 0.2px black;
			}
		.closeLink:hover {
				color:#f66;
			    text-shadow: 0 0 1px #888;
			}
		.frameHeader {
				padding:0 5px;
				visibility: hidden; 
			}
		.framePanel:hover .frameHeader {
				visibility: visible;
			}
		.buttonsPanel {
			    /*background-color: #5577AA;*/
			    /*border-color: #335599;*/
			    /*border-radius: 5px 5px 0 0;
			    border-style: solid;
			    border-width: 1px 1px 0;*/
			    /*color: #FFFFFF;*/
			    float: right;
			    font-family: verdana,sans-serif;
			    font-size: 1em;
			    line-height: 1.1em;
			    padding: 0 5px 2px;
			}
	</ui:style>
	<g:HTMLPanel ui:field="framePanel" addStyleNames="{style.framePanel}">
		<div class="{style.frameHeader}">
			<div class="{style.buttonsPanel}">
				<g:Anchor ui:field="closeLink" addStyleNames="{style.closeLink}">X</g:Anchor>
			</div>
		</div>
		<g:HTMLPanel ui:field="toolPanel" addStyleNames="{style.tool}">
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 