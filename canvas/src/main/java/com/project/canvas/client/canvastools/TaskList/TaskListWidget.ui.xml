<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:com.project.canvas.client.canvastools.TaskList">
	<ui:with field='res' type='com.project.canvas.client.resources.CanvasResources'/>
	<ui:style>
	</ui:style>
	<g:HTMLPanel ui:field="panelMain" addStyleNames="{res.main.taskList}" >
 		<g:FlowPanel ui:field="header" addStyleNames="{res.main.taskListHeader}">
 			<my:HoverTextBox ui:field="label">My Task List</my:HoverTextBox>
		</g:FlowPanel> 
		<g:HTMLPanel ui:field="panelTaskList" addStyleNames="{res.main.taskListBody}">
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="footer" addStyleNames="{res.main.taskListFooter}">
			<g:Button ui:field="buttonAdd">Add...</g:Button>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 